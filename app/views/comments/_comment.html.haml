.comment{ id: "comment_#{comment.id}"}
  .user-name
    =link_to comment.user.name, profile_path(comment.user.name)
  .comment-content
    =comment.content
  -if current_user.id == comment.user_id
    =link_to comment, method: :delete, id: "delete-#{comment.id}", remote: true,
                      data: { confirm: 'Are you sure?'} do
      %span(class="glyphicon glyphicon-remove delete-comment")
