.log-in-bg
  .container
    .row
      .col-lg-4.col-lg-offset-4
        .panel.log-in
          .panel-heading
            %h2 Log in
          =simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            =f.error_notification
            .panel-body
              .form-inputs
                =f.input :email, required: true, placeholder: 'Email', autofocus: true,
                                 input_html: { class: 'form-control input-lg' },
                                 label_html: { class: "sr-only" }

                =f.input :password, required: true, placeholder: 'Password',
                                    input_html: { class: 'form-control input-lg' },
                                    label_html: { class: "sr-only" }

                =f.input :remember_me, as: :boolean if devise_mapping.rememberable?
              .form-actions
                =f.button :submit, "Log in", class: 'btn btn-info btn-lg btn-block'
