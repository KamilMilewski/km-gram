.registration-bg
  .container
    .row
      .col-lg-4.col-lg-offset-4
        .panel.log-in
          .panel-heading
            %h2.text-center Join KmGram
          =simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            =f.error_notification
            .panel-body
              .form-inputs
                =f.input :email, required: true, placeholder: 'Email', autofocus: true,
                                 input_html: { class: 'form-control input-lg' },
                                 label_html: { class: "sr-only" }

                =f.input :name, required: true, placeholder: 'Name',
                                input_html: { class: 'form-control input-lg' },
                                label_html: { class: "sr-only" }

                =f.input :password, required: true, placeholder: 'Password',
                                    input_html: { class: 'form-control input-lg' },
                                    label_html: { class: "sr-only" }

                =f.input :password_confirmation, required: true, placeholder: 'Confirm Password',
                                                 input_html: { class: 'form-control input-lg' },
                                                 label_html: { class: "sr-only" }
              .form-actions
                .form-group
                  =f.button :submit, "Sign up", class: 'btn btn-info btn-lg btn-block'
